.nav{
  display: -webkit-flex;
  display: flex;
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-content: center;
}
.nav-item{
  width: 25%;
  display: flex;
  height: 160rpx;
  flex-flow: column nowrap;
  align-content: center;
  justify-content: center;
}
.nav_link{
  text-align: center;
}
.nav_thumb{
  width: 100%;
  height: 100rpx;
}
.nav_text{
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #666;
  text-align: center;
}
.banner{
  width: 100%;
  height: 310rpx;
  margin-top: 20rpx;
}
.banner_img{
  width: 100%;
  height: 310rpx;
}